{
  "files": ["./typings.d.ts", "src/index.ts"],
  "exclude": [
    "node_modules",
    "/.vscode"
  ],
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "lib": ["dom", "es5", "es6"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "sourceMap": true,
    "outDir": "out",
    "paths": {
      "*": ["*", "./@types/*"]
    },
    "strictNullChecks": false,
    "skipLibCheck": true,
    "target": "es5",
    "typeRoots": ["node_modules/@types"]
  },
  "compileOnSave": true
}
